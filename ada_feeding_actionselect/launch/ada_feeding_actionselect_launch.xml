<launch>
  <arg name="policy" default="constant" description="Which policy to use" />

  <!-- Launch the action servers necessary to move the robot -->
  <node pkg="ada_feeding_actionselect" exec="policy_service" name="ada_feeding_actionselect" respawn="false">
    <param from="$(find-pkg-share ada_feeding_actionselect)/config/policies.yaml"/>
    <param name="policy" value="$(var policy)"/>
    <remap from="~/image" to="/camera/color/image_raw/compressed"/>
    <remap from="~/depth" to="/camera/aligned_depth_to_color/image_raw"/>
  </node>

</launch>
